<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_contact_radius_wizard_form" model="ir.ui.view">
        <field name="name">contact.radius.wizard.form</field>
        <field name="model">contact.radius.wizard</field>
        <field name="arch" type="xml">
            <form string="Find Contacts Within Radius">
                <group>
                    <group>
                        <field name="source_location_id"/>
                        <field name="radius_miles"/>
                    </group>
                </group>

                <footer>
                    <button name="action_find_contacts"
                            string="Find Contacts"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to open wizard -->
    <record id="action_contact_radius_wizard" model="ir.actions.act_window">
        <field name="name">Find Contacts by Radius</field>
        <field name="res_model">contact.radius.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="base.model_res_partner"/>
        <field name="binding_view_types">form,list</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_contact_radius_finder"
              name="Find Contacts by Radius"
              parent="contacts.menu_contacts"
              action="action_contact_radius_wizard"
              sequence="10"/>
</odoo>
