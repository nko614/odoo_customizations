<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add State field to stock picking form -->
    <record id="view_picking_form_inherit_state" model="ir.ui.view">
        <field name="name">stock.picking.form.state</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="item_state"/>
            </field>
        </field>
    </record>

    <!-- Add State field to stock move line tree -->
    <record id="view_move_line_tree_inherit_state" model="ir.ui.view">
        <field name="name">stock.move.line.tree.state</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_tree"/>
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="item_state"/>
            </field>
        </field>
    </record>

    <!-- Add State field to detailed operations tree -->
    <record id="view_stock_move_line_detailed_inherit_state" model="ir.ui.view">
        <field name="name">stock.move.line.operations.tree.state</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="item_state" optional="show"/>
            </field>
        </field>
    </record>
</odoo>