<odoo>
    <record id="fruit_price_view_list" model="ir.ui.view">
        <field name="name">fruit.price.list</field>
        <field name="model">fruit.price</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="form"/>
                <field name="price_per_lb"/>
                <field name="price_per_cup"/>
                <field name="unit"/>
                <field name="note"/>
            </list>
        </field>
    </record>

    <record id="fruit_price_view_form" model="ir.ui.view">
        <field name="name">fruit.price.form</field>
        <field name="model">fruit.price</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="form"/>
                            <field name="note"/>
                        </group>
                        <group>
                            <field name="price_per_lb"/>
                            <field name="price_per_cup"/>
                            <field name="unit"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="fruit_price_view_search" model="ir.ui.view">
        <field name="name">fruit.price.search</field>
        <field name="model">fruit.price</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="note"/>
                <filter name="fresh" string="Fresh" domain="[('form', '=', 'fresh')]"/>
                <filter name="frozen" string="Frozen" domain="[('form', '=', 'frozen')]"/>
                <filter name="canned" string="Canned" domain="[('form', '=', 'canned')]"/>
                <filter name="dried" string="Dried" domain="[('form', '=', 'dried')]"/>
                <filter name="juice" string="Juice" domain="[('form', '=', 'juice')]"/>
                <filter name="group_form" string="Form" context="{'group_by': 'form'}"/>
                <filter name="group_name" string="Fruit" context="{'group_by': 'name'}"/>
            </search>
        </field>
    </record>

    <record id="fruit_price_action" model="ir.actions.act_window">
        <field name="name">Fruit Prices</field>
        <field name="res_model">fruit.price</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="fruit_price_view_search"/>
    </record>

    <menuitem id="fruit_finder_menu_root" name="Fruit Finder" sequence="100" action="fruit_price_action" web_icon="fruit_finder,static/description/icon.png"/>
</odoo>
