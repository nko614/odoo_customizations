<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Product Template Form View with Custom Product Features -->
        <record id="view_product_template_form_custom" model="ir.ui.view">
            <field name="name">product.template.form.custom</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Custom Product" name="custom_product" 
                          invisible="is_custom_product == False">
                        <group>
                            <group>
                                <field name="is_custom_product"/>
                                <field name="custom_product_type" required="is_custom_product == True"/>
                                <field name="allow_custom_bom"/>
                            </group>
                            <group>
                                <field name="base_cost_multiplier"/>
                                <field name="custom_config_count"/>
                            </group>
                        </group>
                        <group string="Custom Fields Configuration">
                            <field name="custom_fields_config" widget="ace" options="{'mode': 'json'}" 
                                   placeholder='{"field_name": {"type": "text", "label": "Field Label", "required": true}}'/>
                        </group>
                    </page>
                </notebook>
                
                <field name="purchase_ok" position="after">
                    <field name="is_custom_product"/>
                </field>
            </field>
        </record>

        <!-- Product Product Form View -->
        <record id="view_product_form_custom" model="ir.ui.view">
            <field name="name">product.product.form.custom</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <div class="oe_button_box" position="inside">
                    <!-- BOM creation available via Custom Products menu -->
                </div>

                <field name="default_code" position="after">
                    <field name="is_custom_variant" readonly="1" invisible="is_custom_variant == False"/>
                    <field name="parent_product_id" readonly="1" invisible="parent_product_id == False"/>
                </field>

                <field name="parent_product_id" position="after">
                    <field name="custom_config_id" invisible="is_custom_variant == False"/>
                </field>
            </field>
        </record>

        <!-- Custom Product Template Tree View -->
        <record id="view_custom_product_template_tree" model="ir.ui.view">
            <field name="name">custom.product.template.tree</field>
            <field name="model">custom.product.template</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="category_id"/>
                    <field name="default_uom_id"/>
                    <field name="sequence"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <!-- Custom Product Template Form View -->
        <record id="view_custom_product_template_form" model="ir.ui.view">
            <field name="name">custom.product.template.form</field>
            <field name="model">custom.product.template</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!-- Custom product creation available via menu -->
                        </div>

                        <group>
                            <group>
                                <field name="name"/>
                                <field name="category_id"/>
                                <field name="default_uom_id"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="base_price"/>
                                <field name="complexity_level"/>
                                <field name="lead_time_days"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Template Fields" name="template_fields">
                                <field name="template_fields" widget="ace" options="{'mode': 'json'}" 
                                       placeholder='{"field_name": {"type": "text", "label": "Field Label", "required": true}}'/>
                            </page>
                            <page string="Components" name="components">
                                <field name="component_ids">
                                    <list editable="bottom">
                                        <field name="product_id"/>
                                        <field name="quantity"/>
                                        <field name="uom_id"/>
                                        <field name="is_required"/>
                                        <field name="description"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Description" name="description">
                                <field name="description"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Custom Product Template Action -->
        <record id="action_custom_product_template" model="ir.actions.act_window">
            <field name="name">Custom Product Templates</field>
            <field name="res_model">custom.product.template</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first custom product template!
                </p>
                <p>
                    Templates help you quickly create similar custom products
                    by defining reusable configurations and components.
                </p>
            </field>
        </record>

    </data>
</odoo>