<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Sale Order Form View with Custom Products -->
        <record id="view_order_form_custom" model="ir.ui.view">
            <field name="name">sale.order.form.custom</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <div class="alert alert-info" invisible="state not in ('draft', 'sent')">
                        <strong>Custom Products:</strong> Use the Custom Products menu to create custom products for this order.
                    </div>
                </field>
            </field>
        </record>

        <!-- Custom Product Configuration Tree View -->
        <record id="view_custom_product_config_tree" model="ir.ui.view">
            <field name="name">custom.product.config.tree</field>
            <field name="model">custom.product.config</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list decoration-info="state == 'draft'" decoration-success="state == 'confirmed'">
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="partner_id"/>
                    <field name="sale_order_id"/>
                    <field name="estimated_price"/>
                    <field name="state"/>
                    <field name="create_date"/>
                </list>
            </field>
        </record>

        <!-- Custom Product Configuration Form View -->
        <record id="view_custom_product_config_form" model="ir.ui.view">
            <field name="name">custom.product.config.form</field>
            <field name="model">custom.product.config</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_create_bom" type="object" string="Create BOM" 
                                class="btn-primary" invisible="bom_id != False"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button type="action" name="%(sale.action_orders)d" 
                                    class="oe_stat_button" icon="fa-shopping-cart"
                                    invisible="sale_order_id == False"
                                    context="{'search_default_id': sale_order_id}">
                                <div class="o_stat_info">
                                    <span class="o_stat_text">Sales Order</span>
                                </div>
                            </button>
                        </div>

                        <group>
                            <group>
                                <field name="name"/>
                                <field name="product_id"/>
                                <field name="partner_id"/>
                                <field name="template_id"/>
                            </group>
                            <group>
                                <field name="sale_order_id"/>
                                <field name="bom_id"/>
                                <field name="estimated_price"/>
                                <field name="total_cost"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Configuration" name="configuration">
                                <field name="configuration_data" widget="ace" options="{'mode': 'json'}"/>
                            </page>
                            <page string="Notes" name="notes">
                                <field name="notes"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Custom Product Configuration Action -->
        <record id="action_custom_product_config" model="ir.actions.act_window">
            <field name="name">Custom Product Configurations</field>
            <field name="res_model">custom.product.config</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first custom product configuration!
                </p>
                <p>
                    Custom product configurations allow you to create and track
                    specialized products for your customers with specific requirements.
                </p>
            </field>
        </record>

    </data>
</odoo>