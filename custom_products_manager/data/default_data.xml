<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Product Categories for Custom Products -->
        <record id="product_category_custom" model="product.category">
            <field name="name">Custom Products</field>
            <field name="parent_id" ref="product.product_category_all"/>
        </record>

        <record id="product_category_custom_configurable" model="product.category">
            <field name="name">Configurable Products</field>
            <field name="parent_id" ref="product_category_custom"/>
        </record>

        <record id="product_category_custom_made_to_order" model="product.category">
            <field name="name">Made to Order</field>
            <field name="parent_id" ref="product_category_custom"/>
        </record>

        <!-- Sample Custom Product Templates -->
        <record id="template_basic_custom" model="custom.product.template">
            <field name="name">Basic Custom Product</field>
            <field name="category_id" ref="product_category_custom_configurable"/>
            <field name="default_uom_id" ref="uom.product_uom_unit"/>
            <field name="description">Basic template for custom products with standard configurations</field>
            <field name="template_fields">{"color": {"type": "selection", "options": ["Red", "Blue", "Green"], "label": "Color", "required": true}, "size": {"type": "text", "label": "Size", "required": false}}</field>
            <field name="sequence">10</field>
        </record>

        <record id="template_complex_assembly" model="custom.product.template">
            <field name="name">Complex Assembly</field>
            <field name="category_id" ref="product_category_custom_made_to_order"/>
            <field name="default_uom_id" ref="uom.product_uom_unit"/>
            <field name="description">Template for complex assemblies with multiple components</field>
            <field name="template_fields">{"material": {"type": "selection", "options": ["Steel", "Aluminum", "Plastic"], "label": "Material", "required": true}, "finish": {"type": "selection", "options": ["Painted", "Anodized", "Raw"], "label": "Finish", "required": true}, "specifications": {"type": "text", "label": "Special Requirements", "required": false}}</field>
            <field name="sequence">20</field>
        </record>

        <!-- IR Sequence for Custom Products -->
        <record id="sequence_custom_product" model="ir.sequence">
            <field name="name">Custom Product Sequence</field>
            <field name="code">custom.product</field>
            <field name="prefix">CP</field>
            <field name="padding">4</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>

        <!-- IR Sequence for Custom BOMs -->
        <record id="sequence_custom_bom" model="ir.sequence">
            <field name="name">Custom BOM Sequence</field>
            <field name="code">custom.bom</field>
            <field name="prefix">CBOM</field>
            <field name="padding">4</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>

    </data>
</odoo>