<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="custom_products_manager.Dashboard">
        <div class="o_custom_products_dashboard">
            <div class="container-fluid">
                <div class="row mb-4">
                    <div class="col-12 text-center">
                        <img src="/custom_products_manager/static/src/img/hammer_icon.png" alt="Custom Products" style="width: 64px; height: 64px; margin-bottom: 15px;"/>
                        <h2>Custom Products Dashboard</h2>
                        <p class="text-muted">Manage your custom products, configurations, and bills of materials</p>
                    </div>
                </div>

                <div class="row mb-4" t-if="state.loaded">
                    <!-- Statistics Cards -->
                    <div class="col-md-3 mb-3">
                        <div class="card bg-primary text-white h-100" t-on-click="openConfigurations" style="cursor: pointer;">
                            <div class="card-body text-center">
                                <i class="fa fa-cogs fa-3x mb-3"></i>
                                <h3 t-esc="state.configCount"/>
                                <p class="card-text">Custom Configurations</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3 mb-3">
                        <div class="card bg-info text-white h-100" t-on-click="openTemplates" style="cursor: pointer;">
                            <div class="card-body text-center">
                                <i class="fa fa-file-text fa-3x mb-3"></i>
                                <h3 t-esc="state.templateCount"/>
                                <p class="card-text">Product Templates</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3 mb-3">
                        <div class="card bg-success text-white h-100" t-on-click="openCustomBOMs" style="cursor: pointer;">
                            <div class="card-body text-center">
                                <i class="fa fa-list-alt fa-3x mb-3"></i>
                                <h3 t-esc="state.bomCount"/>
                                <p class="card-text">Custom BOMs</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3 mb-3">
                        <div class="card bg-warning text-white h-100" t-on-click="openCustomOrders" style="cursor: pointer;">
                            <div class="card-body text-center">
                                <i class="fa fa-shopping-cart fa-3x mb-3"></i>
                                <h3 t-esc="state.orderCount"/>
                                <p class="card-text">Sales Orders</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="row mb-4">
                    <div class="col-12">
                        <h4>Quick Actions</h4>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6 mb-3">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                <i class="fa fa-plus-circle fa-4x text-primary mb-3"></i>
                                <h5 class="card-title">Create Custom Product</h5>
                                <p class="card-text">Create a new custom product with specific configurations and automatically generate the bill of materials.</p>
                                <button class="btn btn-primary" t-on-click="createCustomProduct">
                                    <i class="fa fa-plus"></i> Create Product
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                <i class="fa fa-wrench fa-4x text-success mb-3"></i>
                                <h5 class="card-title">Build BOM</h5>
                                <p class="card-text">Use the interactive BOM builder to create and customize bills of materials with components and alternatives.</p>
                                <button class="btn btn-success" t-on-click="buildBOM">
                                    <i class="fa fa-list-alt"></i> Build BOM
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Loading State -->
                <div class="row" t-if="!state.loaded">
                    <div class="col-12 text-center">
                        <i class="fa fa-spinner fa-spin fa-3x"></i>
                        <p class="mt-3">Loading dashboard...</p>
                    </div>
                </div>

                <!-- Help Section -->
                <div class="row mt-5">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">
                                    <i class="fa fa-question-circle"></i> Getting Started
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4">
                                        <h6>1. Create Templates</h6>
                                        <p class="small">Set up reusable product templates with common configurations and components.</p>
                                    </div>
                                    <div class="col-md-4">
                                        <h6>2. Build Custom Products</h6>
                                        <p class="small">Create custom products directly from sales orders with specific customer requirements.</p>
                                    </div>
                                    <div class="col-md-4">
                                        <h6>3. Manage BOMs</h6>
                                        <p class="small">Use the interactive BOM builder to define manufacturing requirements and costs.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>