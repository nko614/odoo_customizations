<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Keep the same xmlid to replace the old view cleanly -->
    <record id="sale_order_form_customer_alert" model="ir.ui.view">
        <field name="name">sale.order.form.customer.alert</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- customer_alert field kept for DB compatibility -->
            <xpath expr="//group[@name='sale_header']" position="before">
                <field name="customer_alert" invisible="1"/>
            </xpath>
        </field>
    </record>

</odoo>
