<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_order_form_mto_button" model="ir.ui.view">
        <field name="name">sale.order.form.mto.button</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <field name="has_mto_stock_issues" invisible="1"/>
                <button name="action_check_mto_stock"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-exclamation-triangle"
                        invisible="not has_mto_stock_issues">
                    <span class="o_stat_text">MTO Stock</span>
                </button>
            </xpath>
        </field>
    </record>

</odoo>
