<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Action -->
        <record id="action_siding_work_order" model="ir.actions.act_window">
            <field name="name">Siding Work Orders</field>
            <field name="res_model">x_siding_work_order</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first siding work order
                </p>
                <p>
                    Manage all your siding work orders with comprehensive project details including scope, materials, and customer information.
                </p>
            </field>
        </record>
        
        <!-- Top menu item -->
        <menuitem id="menu_siding_work_order_root"
                  name="Siding Work Orders"
                  sequence="10"
                  web_icon="siding_work_order,static/description/icon.png"/>
        
        <!-- Main menu -->
        <menuitem id="menu_siding_work_order_main"
                  name="Work Orders"
                  parent="menu_siding_work_order_root"
                  sequence="10"/>
        
        <!-- Submenu -->
        <menuitem id="menu_siding_work_order_list"
                  name="Work Orders"
                  parent="menu_siding_work_order_main"
                  action="action_siding_work_order"
                  sequence="10"/>
    </data>
</odoo>