<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_siding_work_order_form" model="ir.ui.view">
            <field name="name">x_siding_work_order.form</field>
            <field name="model">x_siding_work_order</field>
            <field name="arch" type="xml">
                <form string="Siding Work Order">
                    <header>
                        <button name="action_print_and_attach" type="object" string="Print &amp; Attach to Sale Order" class="btn-primary"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="date_order"/>
                                <field name="sale_order_id"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <!-- Scope Tab -->
                            <page string="Scope">
                                <group string="Project Scope">
                                    <group>
                                        <field name="scope_whole_house"/>
                                        <field name="scope_walls_only"/>
                                        <field name="scope_soffit_fascia_only"/>
                                        <field name="scope_stone"/>
                                    </group>
                                    <group>
                                        <field name="scope_stucco"/>
                                        <field name="scope_repair"/>
                                        <field name="scope_gutters_to_follow"/>
                                        <field name="scope_painting_to_follow"/>
                                    </group>
                                </group>
                            </page>
                            
                            <!-- Customer Information Tab -->
                            <page string="Customer Information">
                                <group>
                                    <group string="Customer Selection">
                                        <field name="partner_id" options="{'no_create': False, 'no_open': False}"/>
                                    </group>
                                </group>
                                <group string="Customer Details">
                                    <group>
                                        <field name="customer_name"/>
                                        <field name="customer_email"/>
                                    </group>
                                    <group>
                                        <field name="phone_primary"/>
                                        <field name="phone_alt"/>
                                    </group>
                                </group>
                                <group string="Installation Address">
                                    <group>
                                        <field name="installation_street"/>
                                        <field name="installation_city"/>
                                    </group>
                                    <group>
                                        <field name="installation_state"/>
                                        <field name="installation_zip"/>
                                    </group>
                                </group>
                                <group string="Mailing Address">
                                    <group>
                                        <field name="mailing_street"/>
                                        <field name="mailing_city"/>
                                    </group>
                                    <group>
                                        <field name="mailing_state"/>
                                        <field name="mailing_zip"/>
                                    </group>
                                </group>
                            </page>
                            
                            <!-- Vinyl & Fiberglass Tab -->
                            <page string="Vinyl &amp; Fiberglass">
                                <group string="BODY OF HOUSE — LIFETIME VINYL &amp; FIBERGLASS">
                                    <group string="Brand Selection">
                                        <field name="vinyl_alside_charter_oak"/>
                                        <field name="vinyl_alside_prodigy"/>
                                        <field name="vinyl_alside_other"/>
                                        <field name="vinyl_mastic_quest"/>
                                        <field name="vinyl_ascend_fiberglass"/>
                                        <field name="vinyl_mastic_other"/>
                                    </group>
                                    <group string="Specifications">
                                        <field name="vinyl_siding_color"/>
                                        <field name="vinyl_siding_profile"/>
                                        <field name="vinyl_size_in"/>
                                        <field name="vinyl_sqft"/>
                                        <field name="vinyl_corner_color_mode"/>
                                        <field name="vinyl_corner_color_other" invisible="vinyl_corner_color_mode != 'other'"/>
                                    </group>
                                </group>
                            </page>
                            
                            <!-- Steel Tab -->
                            <page string="Steel">
                                <group string="BODY OF HOUSE — LIFETIME STEEL">
                                    <group string="Brand Selection">
                                        <field name="steel_alside_satinwood_select"/>
                                        <field name="steel_revere_cedar_wood"/>
                                        <field name="steel_other"/>
                                    </group>
                                    <group string="Specifications">
                                        <field name="steel_siding_color"/>
                                        <field name="steel_siding_profile"/>
                                        <field name="steel_size_in"/>
                                        <field name="steel_sqft"/>
                                    </group>
                                </group>
                            </page>
                            
                            <!-- Hardboard Tab -->
                            <page string="Hardboard">
                                <group string="BODY OF HOUSE — HARDBOARD">
                                    <group string="Brand Selection">
                                        <field name="hb_james_hardie_plank"/>
                                        <field name="hb_james_hardie_panels"/>
                                        <field name="hb_color_plus"/>
                                        <field name="hb_james_hardie_cemplank"/>
                                        <field name="hb_collins_tru_wood"/>
                                        <field name="hb_lp_smartsiding"/>
                                        <field name="hb_diamond_kote"/>
                                        <field name="hb_real_cedar"/>
                                        <field name="hb_other"/>
                                    </group>
                                    <group string="Specifications">
                                        <field name="hb_batten_spacing"/>
                                        <field name="hb_siding_color"/>
                                        <field name="hb_siding_profile"/>
                                        <field name="hb_size_in"/>
                                        <field name="hb_sqft"/>
                                    </group>
                                </group>
                            </page>
                            
                            <!-- Stucco Tab -->
                            <page string="Stucco">
                                <group string="STUCCO">
                                    <group>
                                        <field name="stucco_whole_house"/>
                                        <field name="stucco_partial"/>
                                        <field name="stucco_mesh_overlay"/>
                                        <field name="stucco_remove_reinstall"/>
                                    </group>
                                    <group>
                                        <field name="stucco_location_desc"/>
                                    </group>
                                </group>
                            </page>
                            
                            <!-- Soffit Tab -->
                            <page string="Soffit">
                                <group string="TRIM AREAS — SOFFIT">
                                    <group string="Type &amp; Material">
                                        <field name="soffit_replace"/>
                                        <field name="soffit_cover"/>
                                        <field name="soffit_vinyl"/>
                                        <field name="soffit_aluminum"/>
                                        <field name="soffit_vented_for_eaves"/>
                                    </group>
                                    <group string="Brand">
                                        <field name="soffit_brand_james_hardie"/>
                                        <field name="soffit_brand_lp"/>
                                        <field name="soffit_brand_collins_tru_wood"/>
                                    </group>
                                    <group string="Specifications">
                                        <field name="soffit_size"/>
                                        <field name="soffit_size_other" invisible="soffit_size != 'other'"/>
                                        <field name="soffit_lin_ft"/>
                                        <field name="soffit_sq_ft"/>
                                        <field name="soffit_color"/>
                                    </group>
                                </group>
                            </page>
                            
                            <!-- Trim & Wraps Tab -->
                            <page string="Trim &amp; Wraps">
                                <group string="WINDOW TRIM">
                                    <group>
                                        <field name="window_trim_hardie"/>
                                        <field name="window_trim_miratec"/>
                                        <field name="window_trim_other"/>
                                        <field name="window_trim_color"/>
                                    </group>
                                </group>
                                <group string="WRAPS / TRIM">
                                    <group string="Windows">
                                        <field name="wrap_no_windows"/>
                                        <field name="wrap_no_windows_color"/>
                                    </group>
                                    <group string="Entry Doors">
                                        <field name="wrap_no_entry_doors"/>
                                        <field name="wrap_no_entry_doors_color"/>
                                    </group>
                                    <group string="Garage Doors">
                                        <field name="wrap_no_garage_doors"/>
                                        <field name="wrap_no_garage_doors_color"/>
                                    </group>
                                    <group string="Posts &amp; Beams">
                                        <field name="wrap_ft_post_wraps"/>
                                        <field name="wrap_ft_post_wraps_color"/>
                                        <field name="wrap_ft_beam_wrap"/>
                                        <field name="wrap_ft_beam_wrap_color"/>
                                        <field name="wrap_base_only"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- List View -->
        <record id="view_siding_work_order_list" model="ir.ui.view">
            <field name="name">x_siding_work_order.list</field>
            <field name="model">x_siding_work_order</field>
            <field name="arch" type="xml">
                <list string="Siding Work Orders">
                    <field name="name"/>
                    <field name="date_order"/>
                    <field name="partner_id"/>
                    <field name="installation_city"/>
                    <field name="installation_state"/>
                    <field name="scope_whole_house"/>
                    <field name="scope_walls_only"/>
                    <field name="scope_soffit_fascia_only"/>
                </list>
            </field>
        </record>
        
        <!-- Search View -->
        <record id="view_siding_work_order_search" model="ir.ui.view">
            <field name="name">x_siding_work_order.search</field>
            <field name="model">x_siding_work_order</field>
            <field name="arch" type="xml">
                <search string="Search Siding Work Orders">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="installation_city"/>
                    <field name="installation_state"/>
                    <filter string="Whole House" name="filter_whole_house" domain="[('scope_whole_house', '=', True)]"/>
                    <filter string="Walls Only" name="filter_walls_only" domain="[('scope_walls_only', '=', True)]"/>
                    <filter string="Soffit/Fascia Only" name="filter_soffit_fascia" domain="[('scope_soffit_fascia_only', '=', True)]"/>
                    <separator/>
                    <filter string="This Month" name="filter_this_month" domain="[('date_order', '&gt;=', (datetime.datetime.now().replace(day=1)).strftime('%Y-%m-%d'))]"/>
                    <group expand="0" string="Group By">
                        <filter string="Date" name="group_date" context="{'group_by': 'date_order'}"/>
                        <filter string="Customer" name="group_customer" context="{'group_by': 'partner_id'}"/>
                        <filter string="City" name="group_city" context="{'group_by': 'installation_city'}"/>
                    </group>
                </search>
            </field>
        </record>
    </data>
</odoo>