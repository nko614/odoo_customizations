<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_siding_work_order_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Siding Work Order: <span t-field="o.name"/></h2>
                        <div class="row mt-4">
                            <div class="col-6">
                                <strong>Date:</strong> <span t-field="o.date_order"/><br/>
                                <strong>Sale Order:</strong> <span t-field="o.sale_order_id.name"/>
                            </div>
                        </div>
                        
                        <!-- Customer Information -->
                        <h3 class="mt-4">Customer Information</h3>
                        <div class="row">
                            <div class="col-6">
                                <strong>Customer:</strong> <span t-field="o.partner_id.name"/><br/>
                                <strong>Email:</strong> <span t-field="o.customer_email"/><br/>
                                <strong>Phone:</strong> <span t-field="o.phone_primary"/><br/>
                                <strong>Alt Phone:</strong> <span t-field="o.phone_alt"/>
                            </div>
                            <div class="col-6">
                                <strong>Installation Address:</strong><br/>
                                <span t-field="o.installation_street"/><br/>
                                <span t-field="o.installation_city"/>, 
                                <span t-field="o.installation_state"/> 
                                <span t-field="o.installation_zip"/>
                            </div>
                        </div>
                        
                        <!-- Project Scope -->
                        <h3 class="mt-4">Project Scope</h3>
                        <div class="row">
                            <div class="col-6">
                                <t t-if="o.scope_whole_house">☑ Whole House<br/></t>
                                <t t-if="o.scope_walls_only">☑ Walls Only<br/></t>
                                <t t-if="o.scope_soffit_fascia_only">☑ Soffit/Fascia Only<br/></t>
                                <t t-if="o.scope_stone">☑ Stone<br/></t>
                            </div>
                            <div class="col-6">
                                <t t-if="o.scope_stucco">☑ Stucco<br/></t>
                                <t t-if="o.scope_repair">☑ Repair<br/></t>
                                <t t-if="o.scope_gutters_to_follow">☑ Gutters to Follow<br/></t>
                                <t t-if="o.scope_painting_to_follow">☑ Painting to Follow<br/></t>
                            </div>
                        </div>
                        
                        <!-- Materials Section -->
                        <t t-if="o.vinyl_sqft or o.steel_sqft or o.hb_sqft">
                            <h3 class="mt-4">Materials</h3>
                            
                            <!-- Vinyl -->
                            <t t-if="o.vinyl_sqft">
                                <h4>Vinyl/Fiberglass</h4>
                                <p>
                                    <strong>Color:</strong> <span t-field="o.vinyl_siding_color"/><br/>
                                    <strong>Profile:</strong> <span t-field="o.vinyl_siding_profile"/><br/>
                                    <strong>Size:</strong> <span t-field="o.vinyl_size_in"/> inches<br/>
                                    <strong>Square Feet:</strong> <span t-field="o.vinyl_sqft"/>
                                </p>
                            </t>
                            
                            <!-- Steel -->
                            <t t-if="o.steel_sqft">
                                <h4>Steel</h4>
                                <p>
                                    <strong>Color:</strong> <span t-field="o.steel_siding_color"/><br/>
                                    <strong>Profile:</strong> <span t-field="o.steel_siding_profile"/><br/>
                                    <strong>Size:</strong> <span t-field="o.steel_size_in"/> inches<br/>
                                    <strong>Square Feet:</strong> <span t-field="o.steel_sqft"/>
                                </p>
                            </t>
                            
                            <!-- Hardboard -->
                            <t t-if="o.hb_sqft">
                                <h4>Hardboard</h4>
                                <p>
                                    <strong>Color:</strong> <span t-field="o.hb_siding_color"/><br/>
                                    <strong>Profile:</strong> <span t-field="o.hb_siding_profile"/><br/>
                                    <strong>Size:</strong> <span t-field="o.hb_size_in"/> inches<br/>
                                    <strong>Square Feet:</strong> <span t-field="o.hb_sqft"/>
                                </p>
                            </t>
                        </t>
                        
                        <!-- Stucco -->
                        <t t-if="o.stucco_whole_house or o.stucco_partial">
                            <h3 class="mt-4">Stucco</h3>
                            <p>
                                <t t-if="o.stucco_whole_house">☑ Whole House<br/></t>
                                <t t-if="o.stucco_partial">☑ Partial<br/></t>
                                <t t-if="o.stucco_mesh_overlay">☑ Mesh Overlay<br/></t>
                                <t t-if="o.stucco_remove_reinstall">☑ Remove/Reinstall<br/></t>
                                <t t-if="o.stucco_location_desc">
                                    <strong>Location/Description:</strong><br/>
                                    <span t-field="o.stucco_location_desc"/>
                                </t>
                            </p>
                        </t>
                        
                        <!-- Soffit -->
                        <t t-if="o.soffit_lin_ft or o.soffit_sq_ft">
                            <h3 class="mt-4">Soffit</h3>
                            <p>
                                <strong>Color:</strong> <span t-field="o.soffit_color"/><br/>
                                <strong>Linear FT:</strong> <span t-field="o.soffit_lin_ft"/><br/>
                                <strong>Square FT:</strong> <span t-field="o.soffit_sq_ft"/>
                            </p>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>