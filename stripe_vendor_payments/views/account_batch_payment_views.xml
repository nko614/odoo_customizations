<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add Stripe payment button to payment batch tree view -->
    <record id="view_account_payment_tree_stripe_batch" model="ir.ui.view">
        <field name="name">account.payment.tree.stripe.batch</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account_batch_payment.view_account_payment_tree_inherit_account_batch_payment"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button name="action_send_stripe_batch_payment" 
                        type="object" 
                        string="Send via Stripe" 
                        class="btn-primary"
                        icon="fa-credit-card"/>
            </header>
        </field>
    </record>
    
    <!-- Add Stripe payment button to batch payment form view -->
    <record id="view_account_batch_payment_form_stripe" model="ir.ui.view">
        <field name="name">account.batch.payment.form.stripe</field>
        <field name="model">account.batch.payment</field>
        <field name="inherit_id" ref="account_batch_payment.view_batch_payment_form"/>
        <field name="arch" type="xml">
            <!-- Add button in header -->
            <header position="inside">
                <button name="action_send_stripe_batch" 
                        type="object" 
                        string="Send All via Stripe" 
                        class="btn-primary"
                        invisible="state != 'sent'"
                        icon="fa-credit-card"/>
            </header>
            
            <!-- Add Stripe status fields -->
            <group position="inside">
                <group string="Stripe Status" invisible="stripe_batch_status == False">
                    <field name="stripe_batch_status" readonly="1"/>
                    <field name="stripe_batch_sent_count" readonly="1"/>
                    <field name="stripe_batch_total_amount" readonly="1"/>
                </group>
            </group>
        </field>
    </record>
    
    <!-- Add action for batch Stripe payments -->
    <record id="action_account_payment_stripe_batch" model="ir.actions.act_window">
        <field name="name">Send Batch via Stripe</field>
        <field name="res_model">stripe.batch.payment.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_batch_payment_id': active_id}</field>
    </record>
</odoo>