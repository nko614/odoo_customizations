<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add Stripe payment button to vendor bill form -->
    <record id="view_move_form_stripe" model="ir.ui.view">
        <field name="name">account.move.form.stripe</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add button in header -->
            <xpath expr="//header" position="inside">
                <button name="action_send_stripe_payment" 
                        type="object" 
                        string="Send via Stripe" 
                        class="btn-primary"
                        invisible="move_type != 'in_invoice' or state != 'posted'"
                        icon="fa-credit-card"/>
            </xpath>
            
            <!-- Add Stripe payment info -->
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Stripe Payment" invisible="stripe_payment_id == False">
                    <group>
                        <field name="stripe_payment_id" readonly="1"/>
                        <field name="stripe_payment_status" readonly="1" widget="badge"/>
                        <field name="stripe_payment_amount" readonly="1"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>