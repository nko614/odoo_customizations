<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Stripe Batch Payment Wizard Form -->
    <record id="view_stripe_batch_payment_wizard_form" model="ir.ui.view">
        <field name="name">stripe.batch.payment.wizard.form</field>
        <field name="model">stripe.batch.payment.wizard</field>
        <field name="arch" type="xml">
            <form string="Send Batch Payments via Stripe">
                <sheet>
                    <div class="alert alert-info" role="alert">
                        <p><i class="fa fa-info-circle"/> This will send all selected payments to vendors via Stripe transfers.</p>
                        <p>Vendors will receive ACH deposits to their bank accounts on the next business day.</p>
                    </div>
                    
                    <group>
                        <group>
                            <field name="total_payments"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="total_amount"/>
                        </group>
                        <group>
                            <field name="batch_payment_id" readonly="1" invisible="batch_payment_id == False"/>
                        </group>
                    </group>
                    
                    <!-- Vendor Status Warnings -->
                    <div class="alert alert-warning" role="alert" 
                         invisible="vendors_without_stripe == False">
                        <p><i class="fa fa-exclamation-triangle"/> <strong>Vendors without Stripe accounts:</strong></p>
                        <p><field name="vendors_without_stripe" readonly="1" nolabel="1"/></p>
                        <p>These vendors need to set up Stripe accounts first.</p>
                    </div>
                    
                    <div class="alert alert-warning" role="alert" 
                         invisible="vendors_not_ready == False">
                        <p><i class="fa fa-exclamation-triangle"/> <strong>Vendors not ready (KYC incomplete):</strong></p>
                        <p><field name="vendors_not_ready" readonly="1" nolabel="1"/></p>
                        <p>These vendors need to complete their Stripe onboarding.</p>
                    </div>
                    
                    <div class="alert alert-success" role="alert" 
                         invisible="all_vendors_ready == False">
                        <p><i class="fa fa-check-circle"/> All vendors are ready to receive payments!</p>
                    </div>
                    
                    <!-- Payment list -->
                    <notebook>
                        <page string="Payments">
                            <field name="payment_ids" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
                
                <footer>
                    <button name="action_send_batch" 
                            type="object" 
                            string="Send All Payments" 
                            class="btn-primary"
                            invisible="all_vendors_ready == False"/>
                    
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>