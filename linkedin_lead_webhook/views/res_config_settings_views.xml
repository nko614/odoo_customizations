<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.linkedin.webhook</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="crm.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='crm']" position="inside">
                <block title="LinkedIn Webhook" name="linkedin_webhook_settings">
                    <setting string="Webhook API Key"
                             help="Set an API key that external scrapers must include in the X-API-Key header when calling /linkedin/webhook">
                        <div class="content-group">
                            <div class="row mt8">
                                <label for="linkedin_webhook_api_key" class="col-lg-4"/>
                                <field name="linkedin_webhook_api_key" password="True"/>
                            </div>
                            <div class="row mt8 text-muted">
                                <div class="col-lg-12">
                                    Endpoint: <code>POST /linkedin/webhook</code> with header <code>X-API-Key: your-key</code>
                                </div>
                            </div>
                        </div>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
