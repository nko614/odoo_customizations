<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Server action to enable weight tracking on selected work orders -->
    <record id="action_enable_weight_tracking" model="ir.actions.server">
        <field name="name">Enable Weight Tracking</field>
        <field name="model_id" ref="mrp.model_mrp_workorder"/>
        <field name="binding_model_id" ref="mrp.model_mrp_workorder"/>
        <field name="state">code</field>
        <field name="code">
records.write({'has_weight_tracking': True})
        </field>
    </record>
    
    <!-- Server action to disable weight tracking on selected work orders -->
    <record id="action_disable_weight_tracking" model="ir.actions.server">
        <field name="name">Disable Weight Tracking</field>
        <field name="model_id" ref="mrp.model_mrp_workorder"/>
        <field name="binding_model_id" ref="mrp.model_mrp_workorder"/>
        <field name="state">code</field>
        <field name="code">
records.write({
    'has_weight_tracking': False,
    'start_weight': 0,
    'end_weight': 0,
    'weight_captured_at_start': False,
    'weight_captured_at_end': False
})
        </field>
    </record>
</odoo>