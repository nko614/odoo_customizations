<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Add toggle button in order lines for custom product creation -->
        <record id="sale_order_line_custom_button_view" model="ir.ui.view">
            <field name="name">sale.order.line.custom.button</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/list/field[@name='product_id']" position="before">
                    <button name="action_create_custom_product" 
                            type="object"
                            string="ðŸ”¨"
                            title="Create Custom Product"
                            class="btn btn-sm btn-outline-primary"
                            invisible="product_id != False"/>
                </xpath>
            </field>
        </record>

        <!-- Show custom product indicator in order lines -->
        <record id="sale_order_line_custom_indicator_view" model="ir.ui.view">
            <field name="name">sale.order.line.custom.indicator</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/list/field[@name='product_id']" position="after">
                    <field name="is_custom_product" 
                           string="ðŸ”¨ Custom" 
                           invisible="is_custom_product == False"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>