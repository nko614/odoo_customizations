<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Add custom product button above order lines -->
        <record id="sale_order_custom_product_button" model="ir.ui.view">
            <field name="name">sale.order.custom.product.button</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']" position="before">
                    <div class="row mb-2">
                        <div class="col-12">
                            <button name="action_add_custom_product_line" 
                                    type="object"
                                    string="ðŸ”¨ Add Custom Product"
                                    class="btn btn-outline-primary btn-sm"
                                    title="Create and add a custom product"/>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>