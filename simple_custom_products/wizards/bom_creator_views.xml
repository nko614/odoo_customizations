<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- BOM Creator Wizard -->
        <record id="view_simple_bom_creator_form" model="ir.ui.view">
            <field name="name">simple.bom.creator.form</field>
            <field name="model">simple.bom.creator</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>Create Bill of Materials</h1>
                            <p>Step 2 of 2: Add components for <field name="product_id" readonly="1" nolabel="1"/></p>
                        </div>

                        <group>
                            <group>
                                <field name="product_tmpl_id" readonly="1"/>
                                <field name="quantity"/>
                            </group>
                            <group>
                                <field name="list_price" readonly="1"/>
                                <field name="sale_line_id" readonly="1"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Components" name="components">
                                <field name="component_lines">
                                    <list editable="bottom">
                                        <control>
                                            <create string="Add Component"/>
                                        </control>
                                        <field name="product_id" 
                                               options="{'no_create': True}"
                                               domain="[('purchase_ok', '=', True)]"/>
                                        <field name="product_qty"/>
                                        <field name="product_uom_id"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>

                        <!-- Hidden context fields -->
                        <group invisible="1">
                            <field name="order_id"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_create_bom_and_add_to_order" 
                                type="object" 
                                string="Create BOM &amp; Add to Order" 
                                class="btn-primary"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>