<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Product Creator Wizard -->
        <record id="view_simple_product_creator_form" model="ir.ui.view">
            <field name="name">simple.product.creator.form</field>
            <field name="model">simple.product.creator</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>Create Custom Product</h1>
                            <p>Step 1 of 2: Define the product details</p>
                        </div>

                        <group>
                            <group>
                                <field name="product_name" placeholder="Enter product name..."/>
                                <field name="product_code" placeholder="Optional product code"/>
                            </group>
                            <group>
                                <field name="list_price"/>
                                <field name="cost_price"/>
                                <field name="quantity"/>
                            </group>
                        </group>

                        <!-- Hidden context fields -->
                        <group invisible="1">
                            <field name="sale_line_id"/>
                            <field name="order_id"/>
                            <field name="partner_id"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_create_product_and_bom" 
                                type="object" 
                                string="Next: Create BOM" 
                                class="btn-primary"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>