<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_line_form_inherit_bafe" model="ir.ui.view">
        <field name="name">purchase.order.line.form.inherit.bafe</field>
        <field name="model">purchase.order.line</field>
        <field name="inherit_id" ref="purchase.purchase_order_line_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="x_customer_id" readonly="1"/>
            </xpath>
        </field>
    </record>

    <record id="purchase_order_form_inherit_bafe" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.bafe</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/list//field[@name='product_id']" position="after">
                <field name="x_customer_id" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo> 