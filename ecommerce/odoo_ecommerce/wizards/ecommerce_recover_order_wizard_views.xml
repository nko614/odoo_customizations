<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ecommerce_recover_order_wizard_form" model="ir.ui.view">
        <field name="name">Recover Order Wizard Form</field>
        <field name="model">ecommerce.recover.order.wizard</field>
        <field name="arch" type="xml">
            <form string="Recover Order">
                <group>
                    <field name="ecommerce_order_ref"/>
                </group>
                <footer>
                    <button string="Recover"
                            type="object"
                            name="action_ecommerce_recover_order"
                            class="btn-primary"
                            data-hotkey="q"/>
                    <button string="Discard"
                            special="cancel"
                            class="btn-secondary"
                            data-hotkey="x"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
