<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="ecommerce_account_rule_company" model="ir.rule">
        <field name="name">E-commerce Account: multi-company</field>
        <field name="model_id" ref="model_ecommerce_account"/>
        <field name="domain_force">[('company_id', 'in', company_ids + [False])]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>
    <record id="ecommerce_offer_rule_company" model="ir.rule">
        <field name="name">E-commerce Offer: multi-company</field>
        <field name="model_id" ref="model_ecommerce_offer"/>
        <field name="domain_force">[('ecommerce_account_id.company_id', 'in', company_ids + [False])]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>
    <record id="ecommerce_location_rule_company" model="ir.rule">
        <field name="name">E-commerce Location: multi-company</field>
        <field name="model_id" ref="model_ecommerce_location"/>
        <field name="domain_force">[('ecommerce_account_id.company_id', 'in', company_ids + [False])]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>
</odoo>
