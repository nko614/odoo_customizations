<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ecommerce_account_form_inherited" model="ir.ui.view">
            <field name="name">ecommerce.account.form.inherit</field>
            <field name="model">ecommerce.account</field>
            <field name="inherit_id" ref="odoo_ecommerce.ecommerce_account_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='credentials']" position="inside">
                    <group invisible="channel_code != 'shopify'">
                        <group>
                            <field name="channel_code" invisible="1"/>
                            <field name="state" invisible="1"/>
                            <field name="shopify_authorization_type"
                                widget="radio" options="{'horizontal': true}"
                                readonly="state == 'connected'"/>
                            <field name="shopify_store"
                                string="Shopify Store"
                                readonly="state == 'connected' or shopify_authorization_type == 'oauth'"
                                required="channel_code == 'shopify' and shopify_authorization_type == 'self_access'"
                                invisible="shopify_authorization_type == 'oauth'"/>
                            <field name="shopify_store_name"
                                string="Shopify Store"
                                invisible="shopify_authorization_type == 'self_access'"/>
                            <field name="shopify_client_id" readonly="state == 'connected'"
                                invisible="shopify_authorization_type == 'self_access'"/>
                            <field name="shopify_client_secret"
                                readonly="state == 'connected'"
                                invisible="shopify_authorization_type == 'self_access'" password="True"/>
                            <field name="shopify_access_token" password="True"
                                readonly="state == 'connected' or shopify_authorization_type == 'oauth'"
                                required="channel_code == 'shopify' and shopify_authorization_type == 'self_access'"/>
                            <button name="action_copy_shopify_app_url"
                                type="object"
                                string="Copy App URL"
                                class="btn-primary"
                                invisible="shopify_authorization_type == 'self_access'"/>
                        </group>
                    </group>
                </xpath>
                <xpath expr="//button[@name='action_connect']" position="attributes">
                    <attribute name="invisible">
                        state == 'connected' or (channel_code == 'shopify' and shopify_authorization_type == 'oauth')
                    </attribute>
                </xpath>
            </field>
        </record>
        <record id="action_shopify_accounts" model="ir.actions.server">
            <field name="name">Shopify Accounts</field>
            <field name="model_id" ref="model_ecommerce_account"/>
            <field name="state">code</field>
            <field name="code">
                action = model.action_open_ecommerce_accounts('shopify')
            </field>
        </record>
        <record id="action_shopify_locations" model="ir.actions.act_window">
            <field name="name">Shopify Locations</field>
            <field name="res_model">ecommerce.location</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'create': False}</field>
            <field name="domain">[('channel_code', '=', 'shopify')]</field>
        </record>
        <record id="action_shopify_offers" model="ir.actions.act_window">
            <field name="name">Shopify Offers</field>
            <field name="res_model">ecommerce.offer</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'create': False}</field>
            <field name="domain">[('channel_code', '=', 'shopify')]</field>
        </record>
    </data>
</odoo>
