<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_board_feet" model="ir.ui.view">
        <field name="name">product.template.form.board_feet</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']//group" position="after">
                <group string="Lumber Dimensions" name="lumber_dimensions">
                    <group>
                        <field name="lumber_length"/>
                        <field name="lumber_width"/>
                    </group>
                    <group>
                        <field name="lumber_thickness"/>
                        <field name="board_feet"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
