<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Stock Report (Inventory) list view -->
    <record id="stock_quant_tree_board_feet" model="ir.ui.view">
        <field name="name">stock.quant.tree.board_feet</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_editable"/>
        <field name="arch" type="xml">
            <field name="quantity" position="after">
                <field name="total_board_feet" optional="show"/>
                <field name="reserved_board_feet" optional="show"/>
                <field name="available_board_feet" optional="show"/>
                <field name="bf_cost" optional="hide"/>
            </field>
        </field>
    </record>

    <!-- Stock quant pivot view -->
    <record id="stock_quant_pivot_board_feet" model="ir.ui.view">
        <field name="name">stock.quant.pivot.board_feet</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_pivot"/>
        <field name="arch" type="xml">
            <field name="quantity" position="after">
                <field name="total_board_feet" type="measure"/>
                <field name="reserved_board_feet" type="measure"/>
            </field>
        </field>
    </record>
</odoo>
