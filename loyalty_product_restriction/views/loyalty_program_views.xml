<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="loyalty_program_view_form_inherit_product_restriction" model="ir.ui.view">
        <field name="name">loyalty.program.form.inherit.product.restriction</field>
        <field name="model">loyalty.program</field>
        <field name="inherit_id" ref="loyalty.loyalty_program_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Product Restrictions" name="product_restrictions">
                    <group>
                        <field name="restrict_products"/>
                        <field name="allowed_product_ids" 
                               widget="many2many_tags"
                               options="{'no_create': True}"
                               domain="[('sale_ok', '=', True)]"
                               invisible="not restrict_products"
                               required="restrict_products"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>