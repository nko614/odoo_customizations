<odoo>
    <!-- Inherited Form View -->
    <record id="delivery_optimizer.stock_picking_form_inherit" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.delivery.optimizer</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <!-- Add View Route button in header -->
            <xpath expr="//header" position="inside">
                <button name="action_view_route_popup" type="object"
                        string="View Route" icon="fa-map-marker"
                        class="btn-secondary"
                        invisible="not partner_id"/>
            </xpath>

            <!-- Add Route Optimization tab -->
            <xpath expr="//notebook" position="inside">
                <page string="Route Optimization" name="route_optimization">
                    <group>
                        <group string="Route Details">
                            <field name="optimized_sequence" readonly="1"/>
                            <field name="distance_from_warehouse" readonly="1"/>
                            <field name="driving_time_minutes" readonly="1"/>
                            <field name="total_route_distance" readonly="1"/>
                        </group>
                        <group string="Actions">
                            <button name="action_view_route_popup" type="object"
                                    string="Preview Route on Map"
                                    icon="fa-map"
                                    class="btn-primary oe_link"
                                    invisible="not partner_id"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Add list view fields -->
    <record id="delivery_optimizer.stock_picking_list_inherit" model="ir.ui.view">
        <field name="name">stock.picking.list.inherit.delivery.optimizer</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="attributes">
                <attribute name="default_order">optimized_sequence asc</attribute>
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="action_optimize_route" type="object"
                        string="Optimize Route" icon="fa-road"
                        class="btn-secondary"/>
            </xpath>
            <field name="scheduled_date" position="after">
                <field name="route_preview" widget="route_preview_button" string="Route" optional="show"/>
                <field name="optimized_sequence" optional="show"/>
                <field name="distance_from_warehouse" optional="show"/>
                <field name="driving_time_minutes" string="Drive (min)" optional="show"/>
                <field name="total_route_distance" optional="hide"/>
            </field>
        </field>
    </record>

    <!-- Add search view with optimization filters -->
    <record id="delivery_optimizer.stock_picking_search_inherit" model="ir.ui.view">
        <field name="name">stock.picking.search.inherit.delivery.optimizer</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_internal_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='available']" position="after">
                <separator/>
                <filter name="optimized" string="Optimized" domain="[('optimized_sequence', '!=', False)]"/>
                <filter name="not_optimized" string="Not Optimized" domain="[('optimized_sequence', '=', False)]"/>
            </xpath>
        </field>
    </record>

    <!-- Create server action for route optimization -->
    <record id="action_optimize_route_server" model="ir.actions.server">
        <field name="name">Optimize Delivery Routes</field>
        <field name="model_id" ref="stock.model_stock_picking"/>
        <field name="binding_model_id" ref="stock.model_stock_picking"/>
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code">
            action = records.action_optimize_route()
        </field>
    </record>

    <!-- Server Action for Open Google Maps Route (binding only - requires selected records) -->
    <record id="action_open_google_maps_route" model="ir.actions.server">
        <field name="name">Open Google Maps Route</field>
        <field name="model_id" ref="stock.model_stock_picking"/>
        <field name="binding_model_id" ref="stock.model_stock_picking"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">action = records.action_open_google_maps_route()</field>
    </record>

    <!-- Window action to show outgoing deliveries for route optimization -->
    <record id="action_delivery_optimizer_pickings" model="ir.actions.act_window">
        <field name="name">Delivery Route Optimizer</field>
        <field name="res_model">stock.picking</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('picking_type_id.code', '=', 'outgoing')]</field>
        <field name="context">{'search_default_available': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">No outgoing deliveries found</p>
            <p>Select deliveries from the list and use Actions to optimize routes or open in Google Maps.</p>
        </field>
    </record>

    <!-- Menu structure -->
    <menuitem id="menu_delivery_optimizer_root" name="Route Optimization" parent="stock.menu_stock_root" sequence="100"/>

    <menuitem id="menu_delivery_optimizer_pickings" name="Deliveries" parent="menu_delivery_optimizer_root" action="action_delivery_optimizer_pickings" sequence="10"/>

</odoo>

