<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_board_footage" model="ir.ui.view">
        <field name="name">product.template.form.board.footage</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']//group[@name='group_general']" position="inside">
                <group name="board_footage" string="Board Footage Dimensions (inches)">
                    <field name="x_length" placeholder="Length in inches"/>
                    <field name="x_width" placeholder="Width in inches"/>
                    <field name="x_thickness" placeholder="Thickness in inches"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo> 