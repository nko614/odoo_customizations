<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Product Template Form View - Add dimension fields (this should work reliably) -->
    <record id="view_product_template_form_board_footage" model="ir.ui.view">
        <field name="name">product.template.form.board.footage</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Lumber Dimensions" name="lumber_dimensions">
                    <group>
                        <group string="Dimensions (inches)">
                            <field name="x_length" string="Length"/>
                            <field name="x_width" string="Width"/>
                            <field name="x_thickness" string="Thickness"/>
                        </group>
                        <group string="Calculation Info">
                            <div class="alert alert-info">
                                <p><strong>Board Feet Formula:</strong></p>
                                <p>(Length × Width × Thickness) ÷ 12</p>
                                <p><small>All dimensions should be entered in inches</small></p>
                            </div>
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>

    <!-- Sale Order Form View - Add board footage fields to embedded order lines -->
    <record id="view_sale_order_form_board_footage" model="ir.ui.view">
        <field name="name">sale.order.form.board.footage</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='order_lines']/field/list/field[@name='price_subtotal']" position="after">
                <field name="x_feet" string="Feet" optional="show"/>
                <field name="x_board_feet" string="Board Feet" optional="show"/>
                <field name="hide_from_pdf" string="Hide from PDF" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>