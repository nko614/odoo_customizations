<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_google_maps" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.google.maps</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_shipping_id" position="after">
                <field name="nearest_vendor_id" readonly="1" invisible="not nearest_vendor_id"/>
                <field name="vendor_distance" readonly="1" invisible="not nearest_vendor_id"/>
            </field>
        </field>
    </record>
</odoo> 