<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sale_order_tree" model="ir.ui.view">
        <field name="name">sale.order.list.inherit.ecommerce</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="priority">2000</field>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="ecommerce_account_id" groups="base.group_no_one" optional="hide"/>
                <field name="ecommerce_order_identifier" groups="base.group_no_one" optional="hide"/>
                <field name="ec_order_ref" groups="base.group_no_one" optional="hide"/>
            </field>
        </field>
    </record>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.ecommerce</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='order_lines']/field[@name='order_line']/list//field[@name='qty_invoiced']" position="after">
                <field name="ecommerce_line_identifier" optional="hide" column_invisible="not parent.ecommerce_account_id"/>
            </xpath>
            <group name="order_details" position="inside">
                <field name="ecommerce_account_id" invisible="not ecommerce_account_id"/>
                <field name="ecommerce_order_identifier" invisible="not ecommerce_account_id"/>
                <field name="ec_order_ref" invisible="not ecommerce_account_id"/>
            </group>
        </field>
    </record>
</odoo>
