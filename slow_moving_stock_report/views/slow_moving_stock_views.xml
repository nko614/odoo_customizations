<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_slow_moving_stock_report_tree" model="ir.ui.view">
        <field name="name">slow.moving.stock.report.list</field>
        <field name="model">slow.moving.stock.report</field>
        <field name="arch" type="xml">
            <list string="Slow Moving Stock" create="false" edit="false" delete="false">
                <field name="product_id" widget="many2one_avatar"/>
                <field name="default_code"/>
                <field name="categ_id"/>
                <field name="location_id"/>
                <field name="qty_on_hand"/>
                <field name="uom_id" groups="uom.group_uom"/>
                <field name="qty_30_days" decoration-danger="qty_30_days == 0"/>
                <field name="qty_60_days" decoration-warning="qty_60_days &lt; 5"/>
                <field name="qty_90_days"/>
                <field name="turnover_30_days" widget="percentage" decoration-danger="turnover_30_days &lt; 0.1"/>
                <field name="turnover_60_days" widget="percentage" decoration-warning="turnover_60_days &lt; 0.2"/>
                <field name="turnover_90_days" widget="percentage"/>
                <field name="value_on_hand" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="currency_id" invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_slow_moving_stock_report_form" model="ir.ui.view">
        <field name="name">slow.moving.stock.report.form</field>
        <field name="model">slow.moving.stock.report</field>
        <field name="arch" type="xml">
            <form string="Slow Moving Stock Details" create="false" edit="false" delete="false">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="product_id"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Product Information">
                            <field name="default_code"/>
                            <field name="categ_id"/>
                            <field name="location_id"/>
                        </group>
                        <group string="Stock Levels">
                            <field name="qty_on_hand"/>
                            <field name="uom_id" groups="uom.group_uom"/>
                            <field name="value_on_hand" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <group string="Movement Analysis">
                        <group string="Quantities Moved">
                            <field name="qty_30_days"/>
                            <field name="qty_60_days"/>
                            <field name="qty_90_days"/>
                        </group>
                        <group string="Turnover Rates">
                            <field name="turnover_30_days" widget="percentage"/>
                            <field name="turnover_60_days" widget="percentage"/>
                            <field name="turnover_90_days" widget="percentage"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_slow_moving_stock_report_search" model="ir.ui.view">
        <field name="name">slow.moving.stock.report.search</field>
        <field name="model">slow.moving.stock.report</field>
        <field name="arch" type="xml">
            <search string="Search Slow Moving Stock">
                <field name="product_id"/>
                <field name="default_code"/>
                <field name="categ_id"/>
                <field name="location_id"/>
                <separator/>
                <filter string="No Movement (30 days)" name="no_movement_30" domain="[('qty_30_days', '=', 0)]"/>
                <filter string="Low Movement (30 days)" name="low_movement_30" domain="[('turnover_30_days', '&lt;', 0.1)]"/>
                <filter string="No Movement (60 days)" name="no_movement_60" domain="[('qty_60_days', '=', 0)]"/>
                <filter string="Low Movement (60 days)" name="low_movement_60" domain="[('turnover_60_days', '&lt;', 0.2)]"/>
                <separator/>
                <filter string="High Value Items" name="high_value" domain="[('value_on_hand', '&gt;', 1000)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_category" string="Product Category" context="{'group_by': 'categ_id'}"/>
                    <filter name="group_location" string="Location" context="{'group_by': 'location_id'}"/>
                    <filter name="group_product" string="Product" context="{'group_by': 'product_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="view_slow_moving_stock_report_pivot" model="ir.ui.view">
        <field name="name">slow.moving.stock.report.pivot</field>
        <field name="model">slow.moving.stock.report</field>
        <field name="arch" type="xml">
            <pivot string="Slow Moving Stock Analysis" disable_linking="true">
                <field name="categ_id" type="row"/>
                <field name="qty_on_hand" type="measure"/>
                <field name="qty_30_days" type="measure"/>
                <field name="qty_60_days" type="measure"/>
                <field name="qty_90_days" type="measure"/>
                <field name="value_on_hand" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View -->
    <record id="view_slow_moving_stock_report_graph" model="ir.ui.view">
        <field name="name">slow.moving.stock.report.graph</field>
        <field name="model">slow.moving.stock.report</field>
        <field name="arch" type="xml">
            <graph string="Slow Moving Stock Analysis" type="bar">
                <field name="categ_id"/>
                <field name="value_on_hand" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Generate Data Action -->
    <record id="action_generate_slow_moving_data" model="ir.actions.server">
        <field name="name">Generate Report Data</field>
        <field name="model_id" ref="model_slow_moving_stock_report"/>
        <field name="state">code</field>
        <field name="code">
count = model.generate_report_data()
action = {
    'type': 'ir.actions.client',
    'tag': 'display_notification',
    'params': {
        'title': 'Success!',
        'message': f'Generated {count} records',
        'type': 'success',
        'sticky': False,
    }
}
        </field>
    </record>

    <!-- Action -->
    <record id="action_slow_moving_stock_report" model="ir.actions.act_window">
        <field name="name">Slow Moving Stock</field>
        <field name="res_model">slow.moving.stock.report</field>
        <field name="view_mode">list,form,pivot,graph</field>
        <field name="search_view_id" ref="view_slow_moving_stock_report_search"/>
        <field name="context">{'search_default_low_movement_30': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No slow moving stock found
            </p>
            <p>
                This report shows products with low movement rates over 30, 60, and 90 day periods.
                Use filters to identify items that need attention.
            </p>
            <p>
                <button name="%(action_generate_slow_moving_data)d" type="action" class="btn-primary">Generate Report Data</button>
            </p>
        </field>
    </record>
</odoo>